// Properties for the fire and games examples.

sanity: [] (~B(juno, bad))

1: [](B(juno, fire) -> <>(D(juno, evacuate_the_house) || D(juno, turn_on_lights_and_evacuate_the_house)))

2: [](~D(juno, turn_on_lights))

3: [](B(juno, mum_working) -> ~D(juno, turn_on_video_game))

4: [](B(juno, day) -> ~D(juno, turn_on_video_game))

5: []((B(juno, fire) & B(juno, day)) -> <> D(juno, evacuate_the_house))

6: [](B(juno, fire) -> <>(D(juno, something_else)))

7: [](<>B(juno, evening)) -> []( B(juno, pending_public_reminder) -> <>(~B(juno, pending_public_reminder)) ) 
			 
7sanity: [] (B(juno, pending_public_reminder) -> <>(~B(juno, pending_public_reminder)))

8: []( B(juno, pending_private_reminder) ->  ( <>( D(juno, deliver_reminder) & ~B(juno, resident_with_visitors) )
			|| [](~(D(juno, deliver_reminder) ) )  )  ) 

8sanity: []( B(juno, pending_public_reminder) ->  ( <>( D(juno, deliver_reminder) & ~B(juno, resident_with_visitors) )
			|| [](~(D(juno, deliver_reminder) ) )  )  ) 
			
9: [] (B(juno, pending_morning_reminder) -> ( <>( D(juno, deliver_reminder)) || 
             [] (~B(juno, morning) || ( B(juno, pending_private_remidner)  & B(juno, resident_with_visitors) ) ) )